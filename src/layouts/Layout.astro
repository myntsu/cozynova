---
export interface Props {
  title?: string;
  description?: string;
  ogTitle?: string;
  ogDescription?: string;
  ogUrl: string;
  canonical: string;
  favicon?: string;
  faviconLight?: string;
}

const { title = "Cozy Nova" } = Astro.props as Props;
const { description = "Main site for various Ragnarok Online tools." } =
  Astro.props as Props;
const { ogTitle = "Cozy Nova" } = Astro.props as Props;
const {
  ogDescription = "Cozy Nova content page. No additional fetched information.",
} = Astro.props as Props;
const { ogUrl } = Astro.props as Props;
const { canonical } = Astro.props as Props;
const { favicon = "/favicon/sword.svg" } = Astro.props as Props;
const { faviconLight = "/favicon/sword_black.svg" } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href={favicon}
      media="(prefers-color-scheme: dark)"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href={faviconLight}
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <meta
      name="description"
      content={description}
    />
    <title>{title}</title>
    <meta
      property="og:type"
      content="website"
    />
    <meta
      property="og:title"
      content={ogTitle}
    />
    <meta
      property="og:description"
      content={ogDescription}
    />
    <meta
      property="og:url"
      content={ogUrl}
    />
    <meta
      property="og:image"
      content="https://www.novaragnarok.com/themes/new/img/logo.png"
    />
    <meta
      property="og:image:alt"
      content="Logo"
    />
    <meta
      property="og:image:width"
      content="320"
    />
    <meta
      property="og:image:height"
      content="180"
    />

    <link
      rel="canonical"
      href={canonical}
    />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />

    <!-- Google Fonts -->
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <!-- DM Sans -->
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <!-- Font Awesome -->
    <script
      defer
      src="https://kit.fontawesome.com/76c49369ed.js"
      crossorigin="anonymous"
    ></script>

    <!-- Google tag (gtag.js) -->
    <script
      defer
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-JHZT2VX9C8"
    ></script>
    <script defer>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-JHZT2VX9C8");
    </script>

    <script
      defer
      type="text/javascript"
      src="https://identity.netlify.com/v1/netlify-identity-widget.js"
    ></script>
  </head>

  <body>
    <!-- Cookie consent -->
    <div
      aria-label="Cookie usage consent"
      class="cookie-container">
      <p>
        This website uses cookies for analytics purposes. By clicking <span
          class="header">"ACCEPT"</span
        > you acknowledge our <a
          href="/cookies"
          class="link"
          >Cookies Policy</a
        > and you understand your information will never be sold to any entity or
        third party.
      </p>
      <button
        type="button"
        class="cookie-button"
        >Accept</button
      >
    </div>

    <!-- Skip link -->
    <a
      class="skip-link"
      href="#Main">
      Skip to main content
    </a>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark px-3 px-lg-5 py-1 py-lg-0">
      <div class="container-fluid">
        <a
          href="/"
          id="Cozy-Nova"
          class="header">
          <img
            src="/assets/img/logo/memberLoginLogo.webp"
            alt="Logo"
            width="24"
            height="24"
          /> Cozy Nova
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse"
          id="navbarSupportedContent">
          <ul
            class="navbar-nav me-auto mb-2 mb-lg-0 site-navbar-list gap-0 gap-lg-2">
            <li class="nav-item">
              <a
                class="nav-link"
                aria-current="page"
                href="/">
                Home
              </a>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false">
                Class Guides
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a
                    class="dropdown-item"
                    href="/windcutter">
                    <b>Dragon Knight:</b> Wind Cutter
                  </a>
                </li>
              </ul>
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                href="/mvptimer">
                MVP Timer
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                href="/cooking">
                Halloween
              </a>
            </li>
          </ul>
          <div
            data-netlify-identity-menu
            class="mb-3 mb-lg-0">
          </div>
        </div>
      </div>
    </nav>

    <!-- Slot -->
    <slot />

    <footer>
      <p>Created by <i class="fa-brands fa-discord"></i> Myndi#5041</p>
      <span class="d-none d-md-inline">|</span>
      <a
        href="https://www.buymeacoffee.com/myndi"
        class="link">
        <i class="fa-solid fa-mug-saucer"></i>
        <span>Buy me a coffee</span>
      </a>
    </footer>

    <style is:global>
      [data-netlify-identity-menu] ul {
        list-style: none;

        margin: 0;
        padding: 0;

        display: flex;
      }

      [data-netlify-identity-menu] a {
        color: hsl(var(--white));
        text-decoration: none;
        padding: 0.25em 1em;
        border-radius: 0.25em;
      }

      [data-netlify-identity-menu] a:is(:hover, :focus, :focus-within) {
        color: inherit;
        opacity: 0.5;
      }
      :root {
        --nav-link: 0, 0%, 100%; /* white */

        --white: 0, 0%, 100%;
        --black: 0, 0%, 20%;

        --code: 0, 0%, 15%;
        --code-contrast: 0, 0%, 10%;
        --code-text: 0, 0%, 90%;

        --main-dark: 221, 60%, 19%;
        --main-light: 221, 55%, 45%;

        --main-light-1: 221, 60%, 27%;
        --main-light-2: 221, 60%, 34%;
        --main-light-3: 221, 60%, 40%;

        --text: 0, 0%, 91%;
        --link: 36, 100%, 72%;
        --header: 49, 85%, 65%;
        --important: 343, 100%, 66%;
        --number: 36, 90%, 60%;
        --focus: 150, 50%, 78%;
        --low-focus: 221, 37%, 57%;

        --number-contrast: 221, 80%, 37%;
        --link-contrast: 36, 100%, 50%;
      }

      .theme-changer #dark-blue {
        --radio-color: #2f529d;
      }

      .theme-changer #dark {
        --radio-color: #5d5f71;
      }

      .theme-changer #light {
        --radio-color: #f9f6f5;
      }

      .theme-changer #green {
        --radio-color: #126c30;
      }

      .dark-blue {
        --main-dark: 221, 60%, 19%;
        --main-light: 221, 55%, 45%;

        --main-light-1: 221, 60%, 27%;
        --main-light-2: 221, 60%, 34%;
        --main-light-3: 221, 60%, 40%;

        --text: 0, 0%, 91%;
