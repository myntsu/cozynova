      }

      :root:has(#dark:checked) {
        --main-dark: 0, 0%, 14%;
        --main-light: 0, 0%, 32%;

        --main-light-1: 0, 0%, 19%;
        --main-light-2: 0, 0%, 23%;
        --main-light-3: 0, 0%, 26%;

        --text: 0, 0%, 92%;
        --link: 200, 65%, 70%;
        --header: 250, 100%, 84%;
        --important: 211, 70%, 55%;
        --number: 52, 100%, 70%;
        --focus: 40, 30%, 70%;
        --low-focus: 0, 0%, 67%;

        --number-contrast: 25, 70%, 45%;
        --link-contrast: 250, 100%, 40%;
      }

      .light {
        --main-dark: 0, 0%, 10%;
        --main-light: 0, 0%, 100%;

        --main-light-1: 0, 0%, 89%;
        --main-light-2: 0, 0%, 94%;
        --main-light-3: 0, 0%, 97%;

        --text: 0, 0%, 35%;
        --link: 216, 100%, 76%;
        --header: 2, 67%, 47%;
        --important: 270, 28%, 44%;
        --number: 216, 100%, 56%;
        --focus: 360, 75%, 72%;
        --low-focus: 0, 0%, 60%;

        --number-contrast: 216, 100%, 56%;
        --link-contrast: 0, 0%, 0%;
      }

      :root:has(#light:checked) {
        --main-dark: 0, 0%, 10%;
        --main-light: 0, 0%, 100%;

        --main-light-1: 0, 0%, 89%;
        --main-light-2: 0, 0%, 94%;
        --main-light-3: 0, 0%, 97%;

        --text: 0, 0%, 35%;
        --link: 216, 100%, 65%;
        --header: 2, 67%, 47%;
        --important: 270, 28%, 44%;
        --number: 216, 100%, 45%;
        --focus: 360, 75%, 72%;
        --low-focus: 0, 0%, 60%;

        --number-contrast: 216, 100%, 56%;
        --link-contrast: 0, 0%, 0%;
      }

      .green {
        --main-dark: 140, 77%, 8%;
        --main-light: 140, 77%, 32%;

        --main-light-1: 140, 77%, 15%;
        --main-light-2: 140, 77%, 20%;
        --main-light-3: 140, 77%, 25%;

        --text: 0, 0%, 95%;
        --link: 40, 55%, 75%;
        --header: 150, 90%, 80%;
        --important: 150, 70%, 55%;
        --number: 185, 100%, 80%;
        --focus: 111, 100%, 77%;
        --low-focus: 140, 30%, 60%;

        --number-contrast: 150, 70%, 40%;
        --link-contrast: 0, 70%, 40%;
      }

      :root:has(#green:checked) {
        --main-dark: 140, 77%, 8%;
        --main-light: 140, 77%, 32%;

        --main-light-1: 140, 77%, 15%;
        --main-light-2: 140, 77%, 20%;
        --main-light-3: 140, 77%, 25%;

        --text: 0, 0%, 95%;
        --link: 40, 55%, 75%;
        --header: 150, 90%, 80%;
        --important: 150, 70%, 55%;
        --number: 185, 100%, 80%;
        --focus: 111, 100%, 77%;
        --low-focus: 140, 30%, 60%;

        --number-contrast: 150, 70%, 40%;
        --link-contrast: 0, 70%, 40%;
      }

      input:is(:disabled) {
        cursor: not-allowed !important;
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      html {
        overflow-x: hidden;
      }

      body {
        color: hsl(var(--white));
        background-color: hsl(var(--main-dark));
        font-size: 1rem;
        font-family: "DM Sans", sans-serif;
        font-weight: 400;
        overflow-x: hidden;
      }

      ::-webkit-scrollbar {
        width: 1em;
        background-color: hsl(var(--main-dark));
      }

      ::-webkit-scrollbar-track {
        border-left: 1px solid hsl(var(--white), 10%);
      }

      ::-webkit-scrollbar-thumb {
        background-color: hsl(var(--white), 70%);
      }

      ::-webkit-scrollbar-thumb:is(:hover, :focus) {
        filter: brightness(200%);
      }

      .skip-link {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;

        padding: 0.5rem;

        color: black;
        background-color: white;
        text-align: center;

        z-index: 10;

        translate: 0 -100%;
        transition: translate 150ms ease-in-out;
      }

      .skip-link:is(:focus, :focus-within) {
        translate: 0 0;
      }

      /* Navbar */
      .navbar {
        width: 100vw;
        max-height: max-content;
        background-color: hsl(var(--main-dark));

        border-bottom: 1px solid hsl(var(--main-light-2), 80%);
      }

      .container-fluid {
        width: 100%;
        max-width: 1000px;

        margin: auto;
      }

      #Cozy-Nova {
        display: flex;
        align-items: center;
        gap: 0.25em;

        margin: 0;
        margin-inline-end: 0.5em;

        text-decoration: none;
        text-transform: uppercase;
      }

      #Cozy-Nova:hover {
        color: hsl(var(--header), 50%);
      }

      .site-navbar-list a {
        color: hsl(var(--nav-link));
        text-decoration: none;
      }

      .site-navbar-list a:hover {
        color: hsl(var(--nav-link), 50%);
      }

      .dropdown-toggle {
        display: flex;
        align-items: center;
        background-color: hsl(var(--main-dark)) !important;
      }

      .dropdown-menu {
        border: none;
        background-color: hsl(var(--main-dark));
        overflow: hidden;
      }

      .dropdown-menu a {
        color: hsl(var(--text));
      }

      .dropdown-menu a:hover {
        color: hsl(var(--text));
        background-color: hsl(var(--main-light-1));
      }

      .dropdown-item b {
        color: hsl(var(--header));
      }

      /* Footer */
      footer {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 1em;

        width: 100vw;
        margin-top: auto;
        padding: 2em 0;

        color: hsl(var(--white));
        background-color: hsl(var(--main-dark));

        border-top: 1px solid hsl(var(--main-light-2), 80%);
      }
      footer p {
        margin: 0;
        padding: 0;
      }

      footer a {
        text-decoration: none;
        color: hsl(var(--important));
      }

      footer a:hover {
        color: hsl(var(--important), 60%);
      }

      @media only screen and (max-width: 570px) {
        footer > * {
          text-align: center;
          width: 100%;
          gap: 0;
        }

        footer p {
          padding-top: 0.75em;
        }

        footer a {
          padding-bottom: 0.75em;
        }
      }

      /* Utility classes */
      .shadow-container {
        /* box-shadow: 1px 1px 2px hsl(var(--main-dark), 20%); */
        box-shadow: 0 1px 2px hsl(var(--main-dark), 30%),
          0 1px 3px hsl(var(--main-dark), 30%);
      }

      .border-rounded {
        border-radius: 0.5em;
      }

      .header {
        color: hsl(var(--header));
        font-weight: 700;
      }

      .number {
        color: hsl(var(--number));
      }

      .number-contrast {
        color: hsl(var(--number-contrast));
      }

      .low-focus {
        color: hsl(var(--low-focus));
        font-size: 0.75rem;
        font-weight: 700;
      }

      .important {
        text-decoration: none;
        color: hsl(var(--important));
      }

      .link {
        text-decoration: none;
        color: hsl(var(--link));
        word-break: keep-all;
      }

      .link-small {
        font-size: 0.75rem;
      }

      .link::after {
        content: "\f0c1";
        font-family: "Font Awesome 6 Free";
        font-weight: 900;
        margin-inline-start: 0.25em;
        font-size: 0.75rem;
      }

      .link-small::after {
        font-size: 0.6rem;
      }

      .link.within::after {
        content: "\f103";
        font-family: "Font Awesome 6 Free";
        font-weight: 900;
      }

      .link-contrast {
        color: hsl(var(--link-contrast));
      }

      .link:hover {
        color: hsl(var(--link), 50%);
      }

      .focus {
        color: hsl(var(--focus));
      }

      .focus-tag {
        display: inline;
        align-items: center;

        padding: 0.15em 0.5em;
        color: hsl(var(--white));
        background-color: hsl(var(--important));
        border-radius: 0.25em;
        font-size: 0.9rem;
        user-select: none;
      }

      .tag {
        display: inline-block;
        padding: 0.1em 0.4em;
        color: hsl(var(--white));
        background-color: hsl(var(--main-dark));
        border-radius: 0.25em;
        font-size: 0.75rem;

        user-select: none;
      }

      .tag-reverse {
        display: inline-block;
        margin: 0 0.1em;
        padding: 0.1em 0.4em;
        color: hsl(var(--main-dark));
        background-color: hsl(var(--white));
        border-radius: 0.25em;
        font-size: 0.75rem;

        user-select: none;
      }

      .code {
        display: inline-flex;
        align-items: center;

        margin: 0 0.15em;
        padding: 0.15em 0.75em;
        color: hsl(var(--code-text));
        background-color: hsl(var(--code));
        border-radius: 0.25em;

        font-size: 0.875rem;
        font-weight: 400;

        word-wrap: break-word;
        word-break: keep-all;
      }

      .code.contrast {
        background-color: hsl(var(--code-contrast));
      }

      .new,
      .updated,
      .wip {
        padding: 0.2em 0.4em;
        color: hsl(var(--text));
        border-radius: 0.5em;
        font-size: 0.5rem;
        text-transform: uppercase;
      }

      .new {
        background-color: hsl(var(--important));
      }

      .updated {
        background-color: hsl(var(--focus));
      }

      .wip {
        background-color: hsl(var(--low-focus));
      }

      .skill {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        padding: 0.35em;
        color: hsl(var(--white));
        background-color: hsl(var(--main-dark));
        border-radius: 0.25em;
        font-weight: 700;
        cursor: pointer;
        text-decoration: none;
        text-align: center;
        overflow: hidden;
      }

      .skill > :first-child {
        width: 2ch;
      }

      .skill > :last-child {
        height: calc(100% - 0.25em);
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
      }

      .skill:hover {
        color: hsl(var(--white));
        background-color: hsl(var(--important));
      }

      .skill:active {
        opacity: 0.5;
      }

      .skill img {
        width: 24px;
        height: 24px;
      }

      .text-default {
        display: block;
      }

      .text-swap {
        display: none;
      }

      .hover {
        display: inline-block;
        position: relative;
      }

      .hover::after {
        position: absolute;
        content: "";
        inset: 0;
        background-color: hsl(var(--code));
        border-radius: 0.25em;
      }

      .hover:hover::after {
        background-color: transparent;
      }

      .progress-bar {
        background-color: hsl(var(--important));
      }

      .cookie-container {
        position: fixed;
        bottom: -100%;
        left: 50%;
        translate: -50%;

        display: flex;
        align-items: center;
        gap: 1rem;

        width: 100%;
        max-width: 1200px;
        padding: 1em;

        color: hsl(var(--white));
        background-color: hsl(var(--main-dark));
        border: 1px solid hsl(var(--text), 10%);
        border-radius: 0.25em;
        box-shadow: 0px 2px 10px hsl(var(--white), 10%);

        z-index: -9999;
        visibility: hidden;
        opacity: 0;

        text-align: justify;

        transition: 1000ms ease-out;
      }

      .active-cookie {
        bottom: 2.5%;
        z-index: 9999;
        visibility: visible;
        opacity: 1;
      }

      .cookie-container p {
        margin: 0;
      }

      .cookie-button {
        padding: 0.25em 2.5em;
        color: hsl(var(--black));
        background-color: hsl(var(--white));
        font-weight: 700;
        text-transform: uppercase;
        border: 0;
        border-radius: 0.25em;
      }

      .cookie-button:is(:hover, :focus, :focus-within) {
        background-color: hsl(var(--white), 70%);
      }

      @media only screen and (max-width: 570px) {
        .cookie-container {
          flex-direction: column;
          flex-wrap: wrap;
          border-radius: 0;
        }

        .cookie-container > * {
          width: 100%;
        }

        .active-cookie {
          bottom: 0;
        }
      }

      .custom-tooltip {
        position: relative;
        user-select: none;
      }

      .custom-tooltip::before,
      .custom-tooltip::after {
        --scale: 0;
        --arrow-size: 5px;
        --tooltip-color: #121212;

        position: absolute;
        top: -0.25rem;
        left: 50%;
        transform: translateX(-50%) translateY(var(--translate-y, 0))
          scale(var(--scale));
        transition: 150ms transform;
        transform-origin: bottom center;
      }

      .custom-tooltip::before {
        --translate-y: calc(-100% - var(--arrow-size));

        content: attr(data-custom-tooltip);
