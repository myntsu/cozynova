<main>
    <p>THIS IS CURRENTLY A DEMO</p>
    <h2>Version 0.5</h2>

    <h2>Ingame clock</h2>
    <div id="current-time-gmt-7"></div>

    <h1>MVP Respawn Locations</h1>
    <div>
      <div>
        <label for="mvp-search">Search MVP:</label>
        <input type="text" id="mvp-search" placeholder="Search by name" />
      </div>

      <label for="mvp-select">Select an MVP:</label>
      <select id="mvp-select">
        <option value="None">None selected</option>
      </select>
      <div id="respawn-select-container">
        <label for="respawn-select">Select a Respawn Location:</label>
        <select id="respawn-select">
          <option value="None">None selected</option>
        </select>
      </div>
      <div id="cdr-input-container">
        <label for="cdr-input">Custom timer (optional):</label>
        <input type="text" id="cdr-input-hours" placeholder="Hours" size="4" disabled>
        <input type="text" id="cdr-input-minutes" placeholder="Minutes" size="4" disabled>
        <input type="text" id="cdr-input-seconds" placeholder="Seconds" size="4" disabled>
      </div>
      <div id="death-time-container">
        <label for="death-time-hours">Hours:</label>
        <input type="number" id="death-time-hours" name="death-time-hours" min="0" max="23" step="1">
        <label for="death-time-minutes">Minutes:</label>
        <input type="number" id="death-time-minutes" name="death-time-minutes" min="0" max="59" step="1">
        <label for="death-time-seconds">Seconds:</label>
        <input type="number" id="death-time-seconds" name="death-time-seconds" min="0" max="59" step="1">
      </div>
      <button id="show-mvp-btn">Respawn timer</button>
    </div>
    <div id="mvp-container"></div>
</main>